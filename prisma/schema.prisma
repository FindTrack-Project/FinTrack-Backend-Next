// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Model User
model User {
  id                    String                 @id @default(auto()) @map("_id") @db.ObjectId
  email                 String                 @unique
  name                  String?
  password              String
  // currentBalance        Float                  @default(0) // <--- DIHAPUS: Saldo total akan dihitung dari akun
  
  accounts              Account[]              // Relasi baru: User memiliki banyak Akun
  posts                 Post[]
  expenses              Expense[]
  incomes               Income[]
  budgetRecommendations BudgetRecommendation[]
  
  createdAt             DateTime?              @default(now()) 
  updatedAt             DateTime?              @updatedAt
}

// Model Baru: Account (Bank/Wallet)
model Account {
  id                    String                 @id @default(auto()) @map("_id") @db.ObjectId
  userId                String                 @db.ObjectId
  user                  User                   @relation(fields: [userId], references: [id])
  name                  String                 // Nama akun, misal "BCA Savings", "DANA Wallet"
  currentBalance        Float                  @default(0) // Saldo spesifik untuk akun ini
  type                  String?                // Opsional: "Bank", "E-Wallet", "Cash"
  
  expenses              Expense[]              // Relasi: Account memiliki banyak Pengeluaran
  incomes               Income[]               // Relasi: Account memiliki banyak Pemasukan

  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
}

// Model Post (tidak berubah)
model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String?
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Model Expense (Modifikasi: Tambah accountId dan relasi)
model Expense {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @db.ObjectId
  user        User      @relation(fields: [userId], references: [id])
  accountId   String    @db.ObjectId // <--- BARU: Hubungkan ke Account
  account     Account   @relation(fields: [accountId], references: [id]) // <--- BARU: Relasi ke Account
  amount      Float
  category    String    // Kategori pengeluaran (misal: "Makanan", "Transportasi", "Hiburan")
  date        DateTime  @default(now())
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// Model Income (Modifikasi: Tambah accountId dan relasi)
model Income {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @db.ObjectId
  user        User      @relation(fields: [userId], references: [id])
  accountId   String    @db.ObjectId // <--- BARU: Hubungkan ke Account
  account     Account   @relation(fields: [accountId], references: [id]) // <--- BARU: Relasi ke Account
  amount      Float
  source      String    // Sumber pemasukan (misal: "Gaji", "Freelance", "Hadiah")
  date        DateTime  @default(now())
  description String?
  createdAt   DateTime? @default(now())
  updatedAt   DateTime  @updatedAt
}

// Model BudgetRecommendation (tidak berubah)
model BudgetRecommendation {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @db.ObjectId
  user        User      @relation(fields: [userId], references: [id])
  month       DateTime
  amount      Float
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([month, userId], name: "month_userId_unique")
}