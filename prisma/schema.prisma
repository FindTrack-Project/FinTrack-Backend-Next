// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                    String                 @id @default(auto()) @map("_id") @db.ObjectId
  email                 String                 @unique
  name                  String?
  password              String
  currentBalance        Float                  @default(0) 
  
  posts                 Post[]
  expenses              Expense[]
  incomes               Income[]               // Relasi ke Income
  budgetRecommendations BudgetRecommendation[]
  
  createdAt             DateTime?              @default(now()) 
  updatedAt             DateTime?              @updatedAt // <--- PERUBAHAN DI SINI: Ditambahkan '?'
}

// Model Post yang sudah ada (tidak berubah)
model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String?
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Model Expense (Modifikasi: 'type' dihapus karena sekarang ada model Income terpisah,
//              'category' ditambahkan kembali jika Anda ingin mengkategorikan pengeluaran)
model Expense {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @db.ObjectId
  user        User      @relation(fields: [userId], references: [id])
  amount      Float
  category    String    // Kategori pengeluaran (misal: "Makanan", "Transportasi", "Hiburan")
  date        DateTime  @default(now()) // Default now() jika tidak disediakan
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// Model Baru untuk Pemasukan (Income)
model Income {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @db.ObjectId
  user        User      @relation(fields: [userId], references: [id])
  amount      Float
  source      String    // Sumber pemasukan (misal: "Gaji", "Freelance", "Hadiah")
  date        DateTime  @default(now()) // Default now() jika tidak disediakan
  description String?
  createdAt   DateTime? @default(now()) // Sudah benar di sini
  updatedAt   DateTime  @updatedAt
}

// Model BudgetRecommendation (tidak berubah)
model BudgetRecommendation {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @db.ObjectId
  user        User      @relation(fields: [userId], references: [id])
  month       DateTime  // Ini harusnya hanya tanggal bulan (misal: 2025-06-01)
  amount      Float
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([month, userId], name: "month_userId_unique") // Ensure unique budget per user per month
}